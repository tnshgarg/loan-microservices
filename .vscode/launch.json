  "version": "0.2.0",
  "configurations": [
    {
      "name": "Uvicorn: Microservices",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--port", "8000", "--host", "0.0.0.0"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": false
    },
    {
      "name": "Uvicorn: Run Starlette Employer Service",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["admin.main:app", "--reload", "--port", "8000"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": false
    },
    {
      "name": "Uvicorn: Run Payslip Generation Service",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["payslips.main:app", "--reload", "--port", "8000"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": false
    }
  ]
}
